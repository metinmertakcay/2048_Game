<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.Oyun2048">

    <uses-permission android:name="android.hardware.telephony"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ana_ekran"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.user.Oyun2048.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.user.Oyun2048.GameScreen"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.user.Oyun2048.LeaderBoard"
            android:screenOrientation="portrait"/>
    </application>

</manifest>